<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <%- include('../includes/error-message.ejs') %>

                    <form class="login-form" action="/login" method="POST">
                        <input type="hidden" value="<%= csrfToken %>" name="_csrf" />
                        <div class="form-control">
                            <label for="email">E-Mail</label>
                            <input class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"
                                type="email" name="email" id="email"
                                value="<%= oldInput?.email ? oldInput.email : '' %>">
                        </div>
                        <div class="form-control">
                            <label for="password">Password</label>
                            <input class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>"
                                type="password" name="password" id="password"
                                value="<%= oldInput?.password ? oldInput.password : '' %>">
                        </div>
                        <button class="btn" type="submit">Login</button>
                    </form>
                    <div class="centered">
                        <a href="/reset">Reset password</a>
                    </div>
            </main>
            <%- include('../includes/end.ejs') %>